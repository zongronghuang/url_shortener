<div class="d-flex justify-content-around flex-column w-100 h-75 mt-5">
  {{#if shortUrlKey}}
  <div class="d-flex align-items-center justify-content-between">
    <span id="shortUrl" class="short-url w-100 h4 text-center">{{domain}}{{shortUrlKey}}</span>
    <button type="button" id="copy" class="copy-btn btn btn-info shadow-sm">{{ui.copy_button}}</button>
  </div>
  {{/if}}

  <form action="/" method="POST">
    <div class="w-100 form-group">
      <label for="originalUrl"></label>
      <input type="url" class="original-url mx-auto py-4 form-control" id="originalUrl" name="originalUrl" aria-describedby="urlHelp"
        placeholder="{{ui.input_placeholder}}" value="{{originalUrl}}">
    </div>

    <button type="submit" class="mt-3 btn btn-primary shadow-sm">{{ui.generate_button}}</button>
  </form>
</div>