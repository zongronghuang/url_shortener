<div class="mt-5 mb-3">

  {{#if warning_msg}}
    <div class="alert alert-success alert-dismissible fade show text-center mx-auto w-75" role="alert">
      {{{warning_msg}}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
    </div>
  {{/if}}

  <form action="/" method="POST">
    <div class="form-group">
      <label for="originalUrl"></label>
      <input type="url" class="form-control w-75 mx-auto" id="originalUrl" name="originalUrl" aria-describedby="urlHelp"
        placeholder="Enter a URL to make short" value="{{{originalUrl}}}">
    </div>

    <button type="submit" class="btn btn-primary">Get Short URL</button>
  </form>
</div>